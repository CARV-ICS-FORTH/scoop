<dataset>
  <batch>
    <enable>no</enable>
    <num_dataset>1</num_dataset>
    <filelist>dataset.lst</filelist>
    <work_dir>.</work_dir>
    <data_dir>.</data_dir>
    <directory_per_dataset>no</directory_per_dataset>
  </batch>
  <file>../datasets/arch107_L20000.data</file>
  <format>nexus</format>
</dataset>

<model>
  <type>JC69</type>
</model>

<task>
  <mcmc>yes</mcmc>
  <sumt>no</sumt>
</task>

<sumt>
  <burn_in>0</burn_in>
  <tree_prob>yes</tree_prob>
  <clade_prob>yes</clade_prob>
  <majority>0.50</majority>
  <percentage>0.95</percentage>
  <true_tree>
    <known>yes</known>
    <embedded>no</embedded>
    <treefile>backbone.tree</treefile>
  </true_tree>
</sumt>

<mcmc>
  <nrun>1</nrun>
  <number_of_chains>1</number_of_chains>
  <multipleTry>
    <enable>no</enable>
    <ntry>1</ntry>
    <recombine>no</recombine>
  </multipleTry>
  <maximum_generation>20000</maximum_generation>
  <sample_interval>100</sample_interval>
  <print_interval>100</print_interval>
  <nburnin>0</nburnin>
  <random_number_generator>
    <rng1>
      <method>0</method>
      <seed>100</seed>
    </rng1>
    <rng2>
      <method>0</method>
      <seed>100</seed>
    </rng2>
  </random_number_generator>
  <bootstrap>
    <enable>no</enable>
    <samplingRate>0.1</samplingRate>
    <samplingRatio>1.0</samplingRatio>
    <samplingKnife>1.0</samplingKnife>
  </bootstrap>
  <exchange>
    <enable>yes</enable>
    <exchangeRate>1</exchangeRate>
    <exchange_interval>5</exchange_interval>
    <parallelTempering>
      <temperature_schema>
        <method>3</method>
        <acceptance_ratio>0.3</acceptance_ratio>
        <maximum_gap>5</maximum_gap>
      </temperature_schema>
      <enable>yes</enable>
    </parallelTempering>
    <recombin>
      <enable>no</enable>
    </recombin>
  </exchange>
  <proposal>
    <variablestep>
      <enable>yes</enable>
      <maxstep>4</maxstep>
     </variablestep>
    <stochasticNNI>
      <enable>yes</enable>
      <ratio>0.8</ratio>
    </stochasticNNI>
    <branch>
      <exponential>
        <enable>yes</enable>
        <ratio>1.0</ratio>
      </exponential>
    </branch>
  </proposal>
</mcmc>

<bootstrap>
  <nrepeat>1</nrepeat>
  <samplingRatio>1.0</samplingRatio>
  <samplingKnife>1.0</samplingKnife>
</bootstrap>

<parallel>
  <use_headnode>yes</use_headnode>
  <paralleism>
    <dataset_level>
      <enable>yes</enable>
    </dataset_level>
    <bootstrap_level>
      <enable>yes</enable>
    </bootstrap_level>
    <run_level>
      <enable>yes</enable>
    </run_level>
    <chain_level>
      <enable>yes</enable>
      <num_chains_per_group>1</num_chains_per_group>
    </chain_level>
    <sequence_level>
      <enable>yes</enable>
      <num_partitions>120</num_partitions>
    </sequence_level>
  </paralleism>
</parallel>

<log>
  <filename>pbpi.log</filename>
  <log_mode>newlog</log_mode>
</log>

